@model WebBanXe.Model.USER
@{
    ViewBag.Title = "DHCV Motobikes";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <hr />
    <hr />
    <div class="row border border-2 border-dark rounded-3 py-3">
        <div class="col-md-12">
            @using (Html.BeginForm("Details", "EMPLOYEEs", FormMethod.Post))
            {

                <div class="mb-3">
                    <label class="form-label">Họ và tên</label>
                    <input type="text" name="address" class="form-control" required value="@Model.FullName" readonly>
                </div>
                <div class="mb-3">
                    <label class="form-label">Số điện thoại</label>
                    <input name="message" class="form-control" rows="7" value="@Model.Username" readonly>
                </div>
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="text" name="title" class="form-control" value="@Model.Email" readonly>
                </div>
                <div class="mb-3">
                    <label class="form-label">Địa chỉ</label>
                    <input name="message" class="form-control" rows="7" value="@Model.Address" readonly>
                </div>
                <div class="mb-3">
                    <label class="form-label">Số điện thoại</label>
                    <input name="message" class="form-control" rows="7" value="@Model.Phone" readonly>
                </div>
                <div class="mb-3">
                    <label class="form-label">Ngày tạo</label>
                    <input name="message" class="form-control" rows="7" value="@Model.DayCreate" readonly>
                </div>




            }
        </div>
    </div>
</div>

