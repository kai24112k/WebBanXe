@model WebBanXe.Model.BLOG

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container">
    <hr />
    <div class="form-group">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-9">
                    <h2 class="h2">XEM CHI TIẾT</h2>
                </div>
                <div class="col-md-3" style="text-align:right;">
                    @Html.ActionLink("CHỈNH SỬA", "Edit", new { id = Model.IdBlog }) |
                    @Html.ActionLink("QUAY LẠI", "Index")
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="row border border-2 border-dark rounded-3 py-3">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-9">
                    <div class="mb-3">
                        <label class="form-label">Tên bài viết</label>
                        <input type="text" name="address" class="form-control" required value="@Model.Title" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Ngày tạo</label>
                        <input type="text" name="title" class="form-control" value="@Model.DateCreate" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Thể loại</label>
                        <input name="message" class="form-control" rows="7" value="@Model.CATEGORY_BLOG.NameCate" readonly>
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Hình ảnh</label>
                    @foreach (var picture in Model.IMG_BLOG)
                    {
                        if (picture.IdBlog == picture.IdBlog)
                        {
                            <img src="@picture.LinkImg" alt="Example blog post alt" class="row border border-2 border-dark rounded-3 my-1 py-4 img-fluid shadow">
                        }
                    }
                </div>
                <div class="col-md-12">
                    <label class="form-label">Nội dung bài viết</label>
                    <textarea rows="10" class="form-control" readonly> @Model.Content</textarea>
                </div>
            </div>
        </div>
    </div>
</div>

