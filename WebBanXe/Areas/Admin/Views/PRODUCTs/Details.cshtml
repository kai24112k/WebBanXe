@model WebBanXe.Model.PRODUCT

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <hr />
    <div class="form-group">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-9">
                    <h2 class="h2">CHI TIẾT SẢN PHẨM</h2>
                </div>
                <div class="col-md-3" style="text-align:right;">
                    @Html.ActionLink("CHỈNH SỬA", "Edit", new { id = Model.IdProduct }) |
                    @Html.ActionLink("QUAY LẠI", "Index")
                </div>
            </div>
        </div>
    </div>
    <div class="row border border-2 border-dark rounded-3 py-3">
        <div class="col-md-12">
            <div class="mb-3">
                <label class="form-label">Tên sản phẩm</label>
                <input type="text" name="address" class="form-control" required value="@Model.NameProduct" readonly>
            </div>
            <div class="mb-3">
                <label class="form-label">Giá bán</label>
                <input type="text" name="title" class="form-control" value="@Model.Price" readonly>
            </div>
            <div class="mb-3">
                <label class="form-label">Tình trạng</label>
                <input name="message" class="form-control" rows="7" value="@Model.Status" readonly>
            </div>
            <div class="mb-3">
                <label class="form-label">Tên hãng</label>
                <input name="message" class="form-control" rows="7" value="@Model.BRAND.NameBrand" readonly>
            </div>
            <div class="mb-3">
                <label class="form-label">Loại xe</label>
                <input name="message" class="form-control" rows="7" value="@Model.TYPECAR.NameType" readonly>
            </div>
            <div class="mb-3">
                <label class="form-label">Nội dung:</label>
                <input name="message" class="form-control" rows="7" value="  @Model.Description" readonly>
            </div>

        </div>
    </div>
    </div>


