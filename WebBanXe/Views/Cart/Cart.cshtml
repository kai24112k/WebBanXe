@using WebBanXe.Model
@model List<Cart>
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="heading-breadcrumbs">
    <div class="container">
        <div class="row d-flex align-items-center flex-wrap">
            <div class="col-md-7">
                <h1 class="h2">Thông Tin Giỏ hàng</h1>
            </div>
            <div class="col-md-5">
                <ul class="breadcrumb d-flex justify-content-end">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Giỏ hàng</li>
                </ul>
            </div>
        </div>
    </div>
</div>



<div id="content">
    <div class="container">
        <div class="row bar">
            <div class="col-lg-12">
                <p class="text-muted lead">Bạn hiện có <span>@ViewBag.TotalQuantity</span> sản phẩm trong giỏ hàng của mình.</p>
            </div>
            <div id="basket" class="col-lg-8">
                <div class="box mt-0 pb-0 no-horizontal-padding">
                    @using (Html.BeginForm("UpdateCart", "Cart"))
                    {
                    <form method="get" action="shop-checkout1.html">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th colspan="2">Sản phẩm</th>
                                        <th></th>
                                        <th>Số lượng</th>
                                        <th>Đơn giá</th>
                                        <th>Giảm giá</th>
                                        <th colspan="2">Thành tiền</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td><a href="#"><img src="~/Public/img/@item.sLinkImg"></a></td>
                                            <td><a href="#">@item.sNameProduct</a></td>
                                            <td> <a href="@Url.Action("Detail", "Product", new { id = item.iMaProduct })">Chi tiết</a></td>
                                            <td>
                                                <input type="number" name="txtSoluong" value="@item.iQuantity" class="form-control">
                                            </td>
                                            <td>@String.Format("{0:0,0}", item.sPrice) </td>
                                            <td>0 đ </td>
                                            <td>@String.Format("{0:0,0}", item.sTotalMoney) </td>
                                            <td><a href="@Url.Action("DeleteCart", "Cart", new { @iMaProduct = item.iMaProduct })"><i class="fas fa-trash-alt"></i></a></td>
                                        </tr>

                                    }
                                </tbody>
                                <tfoot>
                                    <tr style="border-bottom: none">
                                        <th colspan="5">Giảm giá</th>
                                        <th colspan="2">@String.Format("{0:0,0}", ViewBag.FinalMoney) VNĐ </th>
                                    </tr>
                                    <tr>

                                        <th colspan="5">Tổng</th>
                                        <th colspan="2">@String.Format("{0:0,0}", ViewBag.FinalMoney) VNĐ </th>
                                    </tr>

                                </tfoot>
                            </table>
                        </div>

                        <div class="box-footer d-flex justify-content-between align-items-center">
                            <div class="left-col"><a href="@Url.Action("Index","Product")" class="btn btn-secondary mt-0"><i class="fa fa-chevron-left"></i> Quay lại cửa hàng</a></div>
                            <div class="right-col">
                                <button type="submit" value="Xóa tất cả" class="btn btn-secondary" formaction="DeleteAllCart"> Xoá tất cả</button>
                                <button type="submit" value="Cập Nhật" class="btn btn-secondary" formaction="UpdateCart"><i class="fa fa-refresh"></i> Cập nhật</button>
                                <button type="submit" class="btn btn-template-outlined">Đi đến đặt hàng <i class="fa fa-chevron-right"></i></button>
                            </div>
                        </div>
                    </form>
                    }
                    </div>
            </div>
            <div class="col-lg-4">
                <div id="order-summary" class="box mt-0 mb-4 p-0">
                    <div class="box-header mt-0">
                        <h3>Tóm tắt đơn hàng</h3>
                    </div>
                    <p class="text-muted">Chi phí vận chuyển và chi phí bổ sung được tính dựa trên các giá trị bạn đã nhập.</p>
                    <div class="table-responsive">
                        <table class="table">
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>Đơn hàng</td>
                                        <th>@String.Format("{0:0,0}", item.sTotalMoney) VNĐ</th>
                                    </tr>
                                    <tr>
                                        <td>Giảm giá</td>
                                        <th>0 đ</th>
                                    </tr>

                                    <tr class="total">
                                        <td>Tổng</td>
                                        <th>@String.Format("{0:0,0}", ViewBag.FinalMoney) VNĐ </th>
                                    </tr>
                                }
                                </tbody>
                        </table>
                    </div>
                </div>
                <div class="box box mt-0 mb-4 p-0">
                    <div class="box-header mt-0">
                        <h4>Mã giảm giá</h4>
                    </div>
                    <p class="text-muted">Nếu bạn có mã phiếu giảm giá, vui lòng nhập mã đó vào ô bên dưới.</p>
                    <form>
                        <div class="input-group">
                            <input type="text" class="form-control"><span class="input-group-btn">
                                <button type="button" class="btn btn-template-main"><i class="fa fa-gift"></i></button>
                            </span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>