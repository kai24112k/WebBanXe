                        </div>
                    </div>
                    <div class="card mb-3" style="width: 100%;">
                        @Html.Action("Brand", "Product")
                    </div>
                    <div class="card mb-3 mt-3" style="width: 100%;">
                        @Html.Action("TypeCar", "Product")

                    </div>
                  

